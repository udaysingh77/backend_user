generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}



model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  sightings Sighting[]
}

model Sighting {
  id        Int      @id @default(autoincrement())
  description String
  dateTime    DateTime
  location    String
  createdAt   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
